<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_region_form" model="ir.ui.view">
			<field name="name">region.region.form</field>
			<field name="model">region.region</field>
			<field name="arch" type="xml">
				<form string="Regions" version="7.0">
					<sheet>
						<group col="4">
							<field name="name" select="1" />
							<field name="type" select="1" />
						</group>
						<group>
							<separator string="Users" />
							<newline />
							<field name="user_ids" />
						</group>
						<group attrs="{'invisible':[('type', '!=', 'territory')]}">
							<separator string="Area" />
							<newline />
							<field name="area_ids" />
						</group>
						<group attrs="{'invisible':[('type', '!=', 'territory')]}">
							<separator string="Zone" />
							<newline />
							<field name="zone_ids" />
						</group>
						<group attrs="{'invisible':[('type', '!=', 'area')]}">
							<separator string="Area-Zone" />
							<newline />
							<field name="area_zone_ids" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_region_tree" model="ir.ui.view">
			<field name="name">region.region.tree</field>
			<field name="model">region.region</field>
			<field name="arch" type="xml">
				<tree string="Regions">
					<field name="name" />
					<field name="type" />
					<field name="user_ids" />
				</tree>
			</field>
		</record>
		<record id="action_region_form" model="ir.actions.act_window">
			<field name="name">Regions</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">region.region</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_region_tree" />
		</record>
		<menuitem name="Regions Configration" parent="base.menu_base_config"
			groups="base.group_user" id="menu_action_region" />
		<menuitem name="Regions" action="action_region_form" parent="menu_action_region"
			groups="base.group_user" id="menu_action_region_form" />
	</data>
</openerp>
