<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_opp_form" model="ir.ui.view">
            <field name="name">crm.opp.page.form</field>
            <field name="model">crm.lead</field>
            <field name="priority">100</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <notebook colspan="4" position="before">
                    <separator string="Partner All Contacts" />
                    <field name="lead_add_line" nolabel="1" context="{'default_partner_address_id': partner_id or False}">
                        <tree string="Address" editable="top">
                            <field name="partner_address_id" />
                            <field name="phone" />
                            <field name="fax" />
                            <field name="email" />
                            <field name="mobile" />
                            <field name="responsibility"/>
                        </tree>
                    </field>
                </notebook>
            </field>
        </record>

        <!-- Migration v8: Calendar Meeting menu 
        <menuitem name="Calendar Meeting"
        id="calendar.mail_menu_calendar" parent="mail.mail_my_stuff"
        sequence="10" action="base_calendar.action_crm_meeting"/>
        -->
    </data>
</openerp>
