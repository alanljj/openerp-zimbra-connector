<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_partner_tree_zimbra" model="ir.ui.view">
            <field name="name">res.partner.tree.zimbra</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                    <field name="name" position="replace">
                     <field name="name" string="First Name"/>
                    <field name="last_name" />
                    </field>
            </field>
        </record>
        
        <record id="view_res_partner_filter_zimbra" model="ir.ui.view">
            <field name="name">res.partner.select.zimbra</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter" />
            <field name="arch" type="xml">
                   <field name="name"
                       filter_domain="['|','|',('name','ilike',self),('parent_id','ilike',self),('ref','=',self)]" position="replace">
                       <field name="name"
                       filter_domain="['|','|',('name','ilike',self),('parent_id','ilike',self),('ref','=',self)]" string="First Name"/>
                       <field name="last_name"
                       filter_domain="['|','|',('last_name','ilike',self),('parent_id','ilike',self),('ref','=',self)]" />
                       </field>
            </field>
        </record>
        
        <record model="ir.ui.view" id="res_partner_kanban_view_zimbra">
            <field name="name">res.partner.kanban.zimbra</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                <field name="last_name"/>
                </field>
                <xpath expr="/kanban/templates/t/div/div/h4/a[@type='open']" position="replace">
                    <a type="open">
                    <field name="name" />
<!--                     <field name="last_name"/> -->
                    </a>
                </xpath>
            </field>
            </record>
        
        <record id="view_partner_form_zimbra" model="ir.ui.view">
            <field name="name">view.partner.form.zimbra</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/div/h1" position="replace">
                    <h2>
                    <field name="name" default_focus="1" placeholder="First Name" style="width: auto;max-width: 35%%"/>
                    <field name="middle_name" placeholder="Middle Name" style="width: auto;max-width: 32%%" attrs="{'invisible':[('is_company','=',True)]}"/>
                    <field name="last_name" placeholder="Lastt Name" style="width: 31%%" attrs="{'invisible':[('is_company','=',True)]}"/>
                    </h2>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/form/sheet/div/h1" position="replace">
                    <h2>
                    <field name="name" style="width: auto;max-width: 35%%" placeholder="First Name"/>
                    <field name="middle_name" style="width: auto;max-width: 32%%" placeholder="Middle Name"/>
                    <field name="last_name" style="width: 31%%" placeholder="Last Name"/>
                    </h2>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/kanban/field[@name='name']" position="after" >
                    <field name="middle_name"/>
                    <field name="last_name"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field/kanban/templates/t/div/div/div/div/table/tr/td/h4" position="replace" >
                    <h4><a type="open"><field name="name"/> <field name="last_name"/></a></h4>                    
                </xpath>
            </field>
            </record>
            
    </data>
</openerp>